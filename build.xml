<?xml version="1.0" encoding="UTF-8"?>
<project name="AutoTestDemo" default="run" basedir=".">
    <property name="src" value="COMP3702_A2/src"></property>
    <property name="dest" value="classes"/>
    <property name="a2-comp3702" value="a2-comp3702.jar"></property>
    <target name="init">
        <mkdir dir="${dest}"/>
    </target>
    <target name="compile" depends="init" >
        <javac srcdir="${src}" destdir="${dest}"></javac>
    </target>
    <target name="build" depends="compile">
        <jar jarfile="${a2-comp3702}" basedir="${dest}">
            <manifest>
                <attribute name="Main-Class" value="problem.Main"/>
            </manifest>
        </jar>
    </target>
    <target name="run" depends="build">
        <java classname="problem.Main.Main" classpath="${a2-comp3702}"></java>
    </target>
    <target name="clean">
        <delete dir="${dest}"></delete>
        <delete file="${a2-comp3702}"></delete>
    </target>
    <target name="rerun" depends="clean,run">
        <ant target="clean"></ant>
        <ant target="run"></ant>
    </target>
</project>
